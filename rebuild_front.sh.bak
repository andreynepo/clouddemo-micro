#/bin/bash
echo Building image...
docker build --build-arg BACKEND=kube.clouddemo.ru -t fra.ocir.io/cloudstarscee/clouddemo-micro-front ~/clouddemo-micro/clouddemo-front/docker/

echo Stopping container...
docker stop front

echo Removing container...
docker container rm front

echo Starting container...
docker run -dit -p 80:80 --net localnet --name front --restart=always fra.ocir.io/cloudstarscee/clouddemo-micro-front:latest

docker ps
